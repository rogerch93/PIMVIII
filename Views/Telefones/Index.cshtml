@model IEnumerable<PimViii.Models.Telefone>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastrar</h1>

<p>
    <a asp-action="Create">Adicionar Novo Número de Telefone</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DDD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoTelefones)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DDD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTelefones.Tipo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TelefoneId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TelefoneId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.TelefoneId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
