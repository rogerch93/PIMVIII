@model IEnumerable<PimViii.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro</h1>

<p>
    <a asp-action="Create">Adicionar Novo Usuário</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomePessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePessoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PessoaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PessoaId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.PessoaId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
